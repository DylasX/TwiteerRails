

<h1>List of tweets</h1>
		<center><%=link_to "New tweet", new_tweet_path%>
		<%=link_to "Users", users_path%> <br><br><br>

			<il>
				<% @tweets.each do |tweet| %>
						<%=link_to tweet.user.email, users_path(tweet.user.email) %><br>
						<li>
						<h3>Tittle</h3>
						<%= tweet.tittle %><br>
						<h3>Message</h3>
						<%= tweet.message %><br>
						<%=link_to "Details", tweet_path(tweet) %> <!--Las rutas estÃ¡n dada por las rutas de afueras en rake routes -->
						<%=link_to "Edit tweet", edit_tweet_path(tweet)%>
						<%= link_to "Delete", tweet, method: :delete, data: {confirm: "Are you sure?"} %>
						<h3>Comments</h3>
						<% @comments=tweet.comments.all%>
                        <% @comments.each do |comment|%>
                            <li>
                                <%=comment.content%>
                            </li>
                        <%end%>


					</li>
				<% end %>
			</il>
