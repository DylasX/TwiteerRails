<h1>List of users</h1>
		<center><%=link_to "New user", new_user_path%>
    <%=link_to "New tweet", new_tweet_path%>
    <%=link_to "List Tweets", tweets_path%>


			<il>
				<% @users.each do |user| %>
					<li>
						<%= user.email %><br>
						<%=link_to "Edit user", edit_user_path(user)%>
						<%= link_to "Delete", user, method: :delete, data: {confirm: "Are you sure?"} %>
            <h2>Tweets</h2>
            <% @tweets=user.tweets.all%>
            <% @tweets.each do |tweet|%>
                <li>
                    <h3>Tittle</h3>
                    <%=tweet.tittle%><br>
                    <h3>Message</h3>
                    <%=tweet.message%><br>
                    <%=link_to "Edit tweet", edit_tweet_path(tweet)%>
                    <%= link_to "Delete", tweet, method: :delete, data: {confirm: "Are you sure?"} %>
                </li>
            <%end%>

            <br>

					</li>
				<% end %>
			</il>
